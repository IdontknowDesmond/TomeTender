    ('105', 'Literary Haven Library', '876 Birch Road' '15');
    -- Add more Libraries as needed
-- Create City table
CREATE TABLE City (
    city_id INT PRIMARY KEY IDENTITY(1,1),
    post_code,
    city_name
);

