-- Create User Account table
CREATE TABLE User Account (
    account_id INT PRIMARY KEY IDENTITY(1,1),
    name,
    surname,
    address,
    city-id INT FOREIGN KEY REFERENCES City(city_id),
    email_address,
    phone_number
);

--INSERT sample data into the User Account table
