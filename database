-- Create Loaned Book table
CREATE TABLE Loaned Book (
    loaned_id INT PRIMARY KEY IDENTITY(1,1),
    book_id INT FOREIGN KEY REFERENCES Book(book_id),
    account_id INT FOREIGN KEY REFERENCES User Account(account_id),
    date_lent,
    date_due,
    date_returned,
    overdue_fine,
    loaned_status_id,
    timestamp
);

--INSERT sample data into the Loaned Book table
INSERT INTO Loaned Book (loaned_id, book_id, account_id, date_lent, date_due, date_returned, overdue_fine, loaned_status_id, timestamp)
